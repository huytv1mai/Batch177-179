@model DataAccessTestDMA.Models.Doctor

@{
    ViewBag.Title = "Doctor Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor Details</h2>

@if (Model != null)
{
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoctorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty.SpecialtyName)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Specialty != null)
            {
                @Html.DisplayFor(model => model.Specialty.SpecialtyName)
            }
            else
            {
                <span>No specialty information available.</span>
            }
        </dd>
    </dl>

    <div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.DoctorId }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
}
else
{
    <p>No data available.</p>
}
